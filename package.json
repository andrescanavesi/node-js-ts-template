{
  "name": "node-js-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-ts": "rm -rf dist/* && tsc",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json",
    "serve": "node dist/src/index.js",
    "build": "yarn tslint && yarn build-ts",
    "start": "yarn build && yarn serve",
    "start:dev": "nodemon",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit  --logHeapUsage test/*",
    "prettier": "prettier --check './**/*.ts'",
    "validate": "yarn prettier && yarn tslint && yarn build-ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^ 16.10.3",
    "@types/supertest": "^2.0.10",
    "jest": "^27.2.4",
    "jest-html-reporter": "^3.3.0",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  },
  "nodemonConfig": {
    "ext": "ts,yaml",
    "ignore": [
      "dist",
      "node_modules"
    ],
    "exec": "yarn start"
  }
}
